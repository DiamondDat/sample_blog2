<% provide(:title, 'Log In') %>
<h1>Log In</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for(:session, url: new_user_session_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form_control' %>

      <%= f.label :password %>
      <%= link_to "Forgot password?", edit_user_password_path %>
      <%= f.password_field :password, class: 'form_control' %>

      <%= f.label :remember_me, class: 'checkbox inline' do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log In",    class: 'btn btn-primary' %>
    <% end %>

    <p>New User? <%= link_to "Sign Up Now!", new_user_registration_path %></p>
  </div>
</div>
